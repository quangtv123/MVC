@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<BANSACHADMIN.Models.DATA.KhachHang>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/LAYOUT/_LayoutAdmin.cshtml";
}

<h2>KhachHang</h2>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Members</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().HoTen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().NgaySinh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().GioiTinh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().DienThoai)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().TaiKhoan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().MatKhau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().DiaChi)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GioiTinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DienThoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaiKhoan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MatKhau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "ChinhSua", new { @MaKH = item.MaKH }) |
                            @Html.ActionLink("Details", "HienThi", new { @MaKH = item.MaKH }) |
                            @Html.ActionLink("Delete", "Xoa", new { @MaKH = item.MaKH })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div><!--/span-->

</div>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, Page => Url.Action("KhachHang", new { Page = Page }))